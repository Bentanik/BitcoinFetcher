<Window x:Class="BitcoinPriceViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bitcoin Price Viewer" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBlock Text="Current DateTime:" />
            <TextBlock Name="CurrentTimeText" />
            <TextBlock Text="Start Time - Start Price:" />
            <TextBlock Name="StartInfoText" />
            <TextBlock Text="Min Time - Min Price:" />
            <TextBlock Name="MinInfoText" />
            <TextBlock Text="Max Time - Max Price:" />
            <TextBlock Name="MaxInfoText" />
            <ListBox Name="RecentPricesList" Height="167" />
        </StackPanel>
    </Grid>
</Window>
